{
	"name": "@chiron/design-tokens",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./tailwind-preset": {
			"types": "./src/tailwind-preset.ts",
			"import": "./src/tailwind-preset.ts",
			"default": "./src/tailwind-preset.ts"
		}
	},
	"scripts": {
		"build": "tsup src/index.ts --dts --format esm,cjs",
		"dev": "tsup src/index.ts --watch",
		"lint": "biome check ./src",
		"format": "biome format ./src --write"
	},
	"peerDependencies": {
		"tailwindcss": "4.1.14"
	},
	"devDependencies": {
		"tailwindcss": "4.1.14",
		"tsup": "8.5.0",
		"typescript": "5.9.3"
	}
}
