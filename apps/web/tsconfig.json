{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@chiron/design-tokens": ["../../packages/design-tokens/src/index.ts"],
      "@chiron/design-tokens/*": ["../../packages/design-tokens/src/*"],
      "@chiron/ui": ["../../packages/ui/src/index.ts"],
      "@chiron/ui/*": ["../../packages/ui/src/*"]
    },
    "ignoreDeprecations": "6.0",
    "allowJs": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
